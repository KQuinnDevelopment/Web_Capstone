@model WBSAlpha.Controllers.Games.BuildInput

<h4>Create Item Build</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBuild" method="post">
            <div class="form-group">
                <label asp-for="BuildName" class="control-label"></label>
                <input asp-for="BuildName" class="form-control" />
                <span asp-validation-for="BuildName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeaponOne" class="control-label"></label>
                <select asp-for="WeaponOne" asp-items="Model.AvailableWeapons" class="form-control"></select>
                <span asp-validation-for="WeaponOne" class="text-danger"></span>
                <label asp-for="WeaponTwo" class="control-label"></label>
                <select asp-for="WeaponTwo" asp-items="Model.AvailableWeapons" class="form-control"></select>
                <span asp-validation-for="WeaponTwo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OffensiveRuneOne" class="control-label"></label>
                <select asp-for="OffensiveRuneOne" asp-items="Model.AvailableRunes" class="form-control"></select>
                <span asp-validation-for="OffensiveRuneOne" class="text-danger"></span>
                <label asp-for="OffensiveRuneTwo" class="control-label"></label>
                <select asp-for="OffensiveRuneTwo" asp-items="Model.AvailableRunes" class="form-control"></select>
                <span asp-validation-for="OffensiveRuneTwo" class="text-danger"></span>
                <label asp-for="DefensiveRune" class="control-label"></label>
                <select asp-for="DefensiveRune" asp-items="Model.AvailableRunes" class="form-control"></select>
                <span asp-validation-for="DefensiveRune" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-dark text-dark" asp-action="FindAllBuilds">Back to List</a>
</div>

