@model WBSAlpha.ViewModels.UserBanViewModel;
@{
    ViewData["Title"] = "Manage Bans";
}
<div>
    <h1 class="mx-auto p-2 text-center">@ViewData["Title"]</h1>

    <partial name="~/Views/Shared/_ModerationNavigation.cshtml" />
    <div class="container mh-100" style="height: 65vh; border: 2px solid black; overflow-y: scroll; overflow-x: inherit;">
        <table class="table">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>Message</th>
                    <th>Reason</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.RudeUsers.Count; i++)
                {
                    <tr>
                        <td><a asp-controller="Moderation" asp-action="UserProfileView" asp-route-view="ManageBans" asp-route-id="@Model.RudeUsers[i].Id">@Model.RudeUsers[i].UserName</a></td>
                        <td>@Model.Reasons[i]</td>
                        <td>@Model.RudeMessages[i]</td>
                        <td>
                            <a class="btn btn-danger" asp-controller="Moderation" asp-action="BanUser" asp-route-id="@Model.RudeUsers[i].Id">Ban</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>