@page
@model WBSAlpha.Controllers.ModerationController.ChatInput
@{
    ViewData["Title"] = "Manage Chatrooms";
    List<Chatroom> chats = (List<Chatroom>)ViewData["Chatrooms"];
}
<div>
    <h1>@ViewData["Title"]</h1>

    <partial name="~/Views/Shared/_ModerationNavigation.cshtml" />
    <div class="container mh-100" style="height: 75vh; border: 2px solid black; overflow-y: scroll;">
        <table class="table row">
            <thead>
                <tr>
                    <th>Chatroom Name</th>
                    <th>Description</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Chatroom chat in chats)
                {
                    <tr>
                        <td>@chat.ChatName</td>
                        <td>@chat.Description</td>
                        <td>
                            <a class="btn btn-danger" asp-controller="Moderation" asp-action="DeleteChatroom" asp-route-id="@chat.ChatID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <form asp-controller="Moderation" asp-action="AddChatroom" method="post" class="row">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-outline-dark text-dark mx-auto p-2">Add Chatroom</button>
        </form>
    </div>
</div>