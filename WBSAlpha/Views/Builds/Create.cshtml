@model WBSAlpha.ViewModels.BuildMaker

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mx-auto text-center p-2">Create Item Build</h1>
<hr />
<div class="row">
    <div class="col-6 offset-3">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="BuildName" class="control-label"></label>
                <input asp-for="BuildName" class="form-control" />
                <span asp-validation-for="BuildName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeaponOne" class="control-label"></label>
                <select asp-for="WeaponOne" asp-items="@Model.AvailableWeapons" class="form-control"></select>
                <label asp-for="WeaponTwo" class="control-label"></label>
                <select asp-for="WeaponTwo" asp-items="@Model.AvailableWeapons" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="OffensiveRuneOne" class="control-label"></label>
                <select asp-for="OffensiveRuneOne" asp-items="@Model.AvailableRunes" class="form-control"></select>
                <label asp-for="OffensiveRuneTwo" class="control-label"></label>
                <select asp-for="OffensiveRuneTwo" asp-items="@Model.AvailableRunes" class="form-control"></select>
                <label asp-for="DefensiveRune" class="control-label"></label>
                <select asp-for="DefensiveRune" asp-items="@Model.AvailableRunes" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
        <div class="mx-auto text-center p-2">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>